        //- input#describeimage(name='describeimage',type='file',placeholder='describeimage')
        //- button#add(type="button" class="btn btn-default btn-sm")
        //-     span(class="glyphicon glyphicon-plus")
        br
        button#submit(name='submit',type='submit') Submit