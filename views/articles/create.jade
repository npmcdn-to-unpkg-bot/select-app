extends ../layout

block content

    body#bodywritearticle
    h3#writearticle Write a article
    form#createform(name='createform',method='post',enctype="multipart/form-data",action='/article/create_article')
        textarea#title(name='title',type='text',placeholder='Title')
        br
        textarea#description(name='description',type='text',placeholder='Description')
        br
        input#thumbleImage(name='thumbnail',type='file',placeholder='ThumbleImage')
        br
        select#select(name="cagegory") se
            each cate,i in category
                option(value=cate)=cate
        br
        textarea#paragraph(name='paragraph',type='text area',placeholder='Content')
